<form class="form-signin" action="/users" method="post">
        <% if @errors %>
          <div class="alert alert-danger">
          <% @errors.each do |error| %>
            <strong><%= error %></strong>
          <% end %>
          </div>
        <% end %>

      <h2 class="form-signin-heading">Sign up!</h2>
      <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name="user[email]" required autofocus>
      <input type="text" id="inputFirstname" class="form-control" placeholder="First name" name="user[first_name]" required autofocus>
      <input type="text" id="inputLastname" class="form-control" placeholder="Last name" name="user[last_name]" required autofocus>
      <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="user[password]" required>
      <input type="password" id="inputPasswordConfirmation" class="form-control" placeholder="Confirm Password" name="password_confirmation" required autofocus>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
    </form>
